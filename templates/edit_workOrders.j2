<html>
<head>
	<title>Edit Work Order</title>
    <div class="heading">
        <h1>CellarTracker</h1>
    </div>

    <link href="/static/css/style.css" rel="stylesheet" type="text/css"/>
    {% include "search_bar.html" %}
    </head>

<body>
    <div>

        <div id="edit">
            <!-- form to edit data in workOrders-->
            <form id="editWorkOrder" action="/edit_workOrder/{{data[0].workOrderID}}" method="post">
                <legend><strong>Edit Work Order</strong></legend>
                <fieldset>
                    <input type="hidden" value="{{data[0].workOrderID}}" class="form-control" id="workOrderID" name="workOrderID" required>

                    <label>Task:</label>
                    <input type="text" value="{{data[0].task}}" class="form-control" id="task" name="task" pattern="/^[a-zA-Z\s]+\,[a-zA-Z\s]+$/" required>
 
                    <label>Winemaker:</label>
                    <select class="form-control" id="winemaker" name="winemaker" pattern="[0-9]+" placeholder="" required>

                        <option value="0">&nbsp;</option>
                        {% for winemaker in winemakerIDs %}

                            <option value="{{winemaker.winemakerID}}">{{winemaker.winemakerID, winemaker.firstName, winemaker.lastName}}</option>
                        
                        {% endfor %}

                    </select>
                    
                    <label>Date Ordered:</label>
                    <input type="date" value="{{data[0].dateOrdered}}" class="form-control" id="dateOrdered" name="dateOrdered" pattern="\d{1,2}/\d{1,2}/\d{4}" required>

                    <label>Status:</label>
                    <select class="form-control" id="status" name="status" pattern="/^[a-zA-Z\s]+\,[a-zA-Z\s]+$/" placeholder="" required>
                        <option value="Incomplete">Incomplete</option>
                        <option value="Complete">Complete</option>
                    </select>
                    
                </fieldset>
                <input type="submit" value="Submit Changes" name="edit_workOrder" class="btn btn-primary" style="margin:.5rem;">
                <a href='/workOrders'><input class="btn" type="button" value="Cancel"></a>
            </form>

</html>